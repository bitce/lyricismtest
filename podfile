# platform :ios, '8.0'
# Uncomment this line if you're using Swift

# platform :ios,'9.0'

use_frameworks!

def shared_pods
	pod 'RealmSwift'
end

target 'Lyricism' do
	
	shared_pods
  pod 'Alamofire', '~> 4.0'
  pod 'SwiftyJSON'
  #pod 'SWXMLHash', '~> 2.3.0'
  pod 'ReachabilitySwift', '~> 3'
  pod 'Kingfisher'
  pod 'ProgressKit', :git => "https://github.com/kaunteya/ProgressKit.git"
  
  # Fabric
  pod 'Fabric'
  pod 'Crashlytics'
  #pod 'Optimizely-iOS-SDK'
  #pod 'Appsee'
	pod 'ObjectMapper', '~> 2.2'

end


post_install do |installer|
	installer.pods_project.targets.each do |target|
		target.build_configurations.each do |config|
			config.build_settings['SWIFT_VERSION'] = '3.0'
		end
	end
end
